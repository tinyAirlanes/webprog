<!doctype html>
<html>
{{> head }}
<body>
    {{> header }}
    <main>
        <div class="block">
        <form action="/courses" method="GET" class="formCenter">
            <input type="text" name="name" style="width: 360px" value="{{nameQuery}}">
            <input type="submit" value="Search"><br>
            
            {{#leftPage}}
             {{#page}}
             <span class="arrow">
             <a href="courses?name={{nameQuery}}&page={{page}}"><img src="/images/left.png" 
             alt="left arrow"></a></span>
             {{/page}}
             {{^page}}
              <span class="arrow"><img src="/images/left.png" alt="left arrow"></span>
             {{/page}}

            <input type="number" name="page" min="1" max="{{maxPage}}" style="width: 60px" value="{{curPage}}" placeholder="{{curPage}}" >
            <label> {{maxPage}}</label>
            <input type="submit" value="Open">
            {{/leftPage}}

            {{#rightPage}}
             {{#page}}
             <span class="arrow">
             <a href="courses?name={{nameQuery}}&page={{page}}"><img src="/images/right.png" 
             alt="right arrow"></a></span>
             {{/page}}
             {{^page}}
              <span class="arrow"><a href="courses?name={{nameQuery}}&page={{page}}" > <img src="/images/right.png" alt="right arrow"></span>
             {{/page}}
            {{/rightPage}}
        </form>
        </div>
        <table>
            <tr>
                <td>Name</td>
            </tr>
            {{#coursesPage}}
            <tr>
                <td><a href="/courses/{{id}}">{{name}}</a></td>
            </tr>
            {{/coursesPage}}
            {{^coursesPage}}
            <tr>
                <td colspan=3 style="text-align: center">No courses</td>
            </tr>
            {{/coursesPage}}
        </table>
          <form action="/courses/new" method="GET" class="formCenter">
            <input type="submit" value="Add new">
          </form>
    </main>
    {{> footer }}
</body>
</html>