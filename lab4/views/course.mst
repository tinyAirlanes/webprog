<!doctype html>
<html>
  {{> head }}
  <body>
    {{> header }}
    <main>
      {{#course}}
      <span class="spanCenter">
       {{#img}}
       <img src={{img}} alt="Course Avatar" class="course_img">
       {{/img}}
       {{^img}}
        <img src="/images/web.png" alt="course image" class="error_img">
        {{/img}}
        <p>NAME:{{name}}</p>
        <p>DURATION:{{duration}}</p>
        <p>GROUP:{{group}}</p>
        <p>CREDITS:{{credits}}</p>
        <p>{{date}}</p>
      </span>
      <!--<form action="/courses/{{id}}?_method=DELETE" method = "POST" class="formCenter" >
        <input type="submit" name="delete" value="Delete a course">
      </form> -->
      <form action="/courses/{{id}}" method = "POST" class="formCenter" >
        <input type="submit" name="delete" value="Delete course">
      </form>
      {{/course}}
      {{^course}}
        <img src="/images/error.png" alt="No such course" align="center" height="100px" class="error_img">
        <p style="text-align: center">{{msg}}</p>
      {{/course}}
    </main>
    {{> footer }}
  </body>
</html>