<!doctype html>
<html>
  {{> head }}
  <body>
    {{> header }}
    <main>
    <div class="addCourse">
      <form action="/courses" method="POST" enctype="multipart/form-data">
        <label class="lbl">Name: </label><input type="text" name="name"><br>
        <label class="lbl">Duration: </label><input type="number" name="duration"><br>
        <label class="lbl">Group: </label><input type="text" min="1" name="group"><br>
        <label class="lbl">Credits: </label><input type="number" min="0" name="credits"><br>
        <label class="lbl">Date: </label><input type="date" name="date"><br>
        <label class="lbl">Image: </label><input type="file" name="course_img"><br>
        <input type="submit" value="Submit" style="margin-left:390px">
      </form>
    </div>
    </main>
    {{> footer }}
  </body>
</html>
